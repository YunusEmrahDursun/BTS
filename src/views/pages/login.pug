extends layout 
block content
  .auth-main2.particles_js
    .auth_div.vivify.fadeInTop
      .card
        .body
          .login-img
            img.img-fluid(src='/images/login-img.png')
          form.form-auth-small(novalidate data-parsley-validate onsubmit="formValitdate(this);return false" style="width: 350px;")
            .mb-3
              p.lead Hesabınıza giriş yapın
            .form-group
              input#signin-email.form-control.round(type='email'  placeholder='E-posta' required ajax-key="l"  name='kullanici_eposta')
            .form-group
              input#signin-password.form-control.round(type='password'  placeholder='Parola' required ajax-key="l" name='kullanici_parola')
            .form-group.clearfix
              label.fancy-checkbox.element-left
                input(type='checkbox')
                span Beni Hatırla
            button.btn.btn-primary.btn-round.btn-block(type='submit') Giriş
            .mt-4
              span.helper-text.m-b-10
                i.fa.fa-lock
                a(href='page-forgot-password.html') Parolanızı mı unuttunuz?
              span
                | Hesabınız yok mu?
                a(href='/web/register') Kayıt ol
          .pattern
            span.red
            span.indigo
            span.blue
            span.green
            span.orange
    #particles-js
      canvas.particles-js-canvas-el(width='1920' height='612' style='width: 100%; height: 100%;')
block javascript 
  script.
    function formValitdate(e){
        var form = $(e);
        form.parsley().validate();
        console.log(form.parsley().isValid())
        if(form.parsley().isValid()){
            Dynajax( 'login', 'l', ()=>{toLink("/web/dashboard")} )
        }
    }